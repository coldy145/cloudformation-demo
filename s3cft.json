{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create standardized s3 bucket",
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "s3 Bucket Configuration"
                    },
                    "Parameters": [
                        "bucketName"
                    ]
                }
            ]
        }
    },
    "Parameters": {
        "bucketName": {
            "Description": "Bucket Name",
            "Type": "String"
        }
	},
    "Resources": {
        "S3BucketDemo": {
            "Type": "AWS::S3::Bucket",
            "DeletionPolicy": "Retain",
            "Properties": {                
                "BucketName": {
                    "Ref": "bucketName"
                }
            }
        }
    }
}
